@model CourseWork.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="container p-xl-3">
    <div class="row justify-content-lg-center">
        <div class="col-lg-8 text-lg-center pb-4">
            <h2 class="h4">Регистрация нового аккаунта</h2>
        </div>
    </div>
    <div class="row justify-content-lg-center">
        <div class="col-lg-5 shadow pt-3 pb-1 mb-2 bg-white rounded">
            <form method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label><br />
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label><br />
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label><br />
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirm" class="form-label"></label><br />
                    <input asp-for="PasswordConfirm" class="form-control"/>
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <div>
                    <input class="btn btn-primary btn-block mb-3" type="submit" value="Регистрация" />
                </div>
            </form>
        </div>
    </div>
</div>